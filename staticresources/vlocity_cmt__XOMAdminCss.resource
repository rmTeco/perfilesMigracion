.via-slds .disableIcon {
  cursor: auto;
  pointer-events: none;
  opacity: 0.65;
  filter: alpha(opacity=65); }

.via-slds select.ng-invalid-required, .via-slds input[type=text].ng-invalid-required, .via-slds input[type=text].ng-invalid-pattern {
  border-color: red; }

.via-slds .referenceContainer {
  width: 100%;
  overflow: hidden;
  overflow-x: auto;
  height: 250px;
  white-space: nowrap; }
  .via-slds .referenceContainer div[class^="fieldsContainer"] {
    overflow: auto;
    width: 250px;
    height: 250px;
    display: inline-block;
    border: 1.5px solid #e0dede; }

.via-slds .slds-page-header .slds-media .slds-media__figure .slds-icon {
  fill: #008ab3; }

.via-slds .slds-card .slds-card__body {
  margin-bottom: 0; }
  .via-slds .slds-card .slds-card__body ul {
    border-bottom-left-radius: 4px;
    border-bottom-right-radius: 4px; }

.via-slds .job-wrapper {
  border-radius: 4px; }
  .via-slds .job-wrapper .job-section:hover {
    background: #f4f6f9; }
  .via-slds .job-wrapper .job-section .job-content .job-detail {
    width: 60%; }
    .via-slds .job-wrapper .job-section .job-content .job-detail .job-label {
      color: #333;
      text-transform: uppercase; }
    .via-slds .job-wrapper .job-section .job-content .job-detail .job-desc {
      color: #555; }

.via-slds #overlay {
  position: absolute;
  background: white;
  width: 250px;
  height: 250px;
  opacity: 0.7; }

.via-slds #contentOverlay {
  position: fixed;
  background: white;
  opacity: 0.7;
  z-index: 1000;
  text-align: center; }
