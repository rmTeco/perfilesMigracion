<?xml version="1.0" encoding="UTF-8"?>
<CustomObject xmlns="http://soap.sforce.com/2006/04/metadata">
    <customSettingsType>List</customSettingsType>
    <description>List of settings for attachment limits and notifications configurations.</description>
    <enableFeeds>false</enableFeeds>
    <fields>
        <fullName>AttachmentNotifDistributionList__c</fullName>
        <description>List of emails of users to which the notification will be sent. The limit is up 10 recipients.</description>
        <externalId>false</externalId>
        <inlineHelpText>Remember to place the list in the next format: asd@email.com;qwe@email.com - No spaces, no &quot;;&quot; at the end. The limit is up 10 recipients.</inlineHelpText>
        <label>Distribution List</label>
        <required>false</required>
        <trackTrending>false</trackTrending>
        <type>TextArea</type>
    </fields>
    <fields>
        <fullName>AttachmentSizeLimit__c</fullName>
        <description>Attachment size limit until which it will allow uploads without distribution list notification. Size in Kb (Kilobytes).</description>
        <externalId>false</externalId>
        <inlineHelpText>Size in Kb (Kilobytes). Until this value there will be no notifications.</inlineHelpText>
        <label>Size Limit</label>
        <precision>18</precision>
        <required>true</required>
        <scale>0</scale>
        <trackTrending>false</trackTrending>
        <type>Number</type>
        <unique>false</unique>
    </fields>
    <label>Attachment Limits Settings</label>
    <listViews>
        <fullName>AttachmentSettingsView</fullName>
        <columns>NAME</columns>
        <columns>AttachmentNotifDistributionList__c</columns>
        <columns>AttachmentSizeLimit__c</columns>
        <columns>CREATED_DATE</columns>
        <filterScope>Everything</filterScope>
        <label>Attachment Settings</label>
        <language>en_US</language>
    </listViews>
    <visibility>Public</visibility>
</CustomObject>
