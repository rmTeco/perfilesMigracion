<design:component label="Vlocity Cards"> 
    <design:attribute name="layout" label="Layout Name" description="The name of the layout to render" required="true" datasource="apex://vlocity_cmt.ActiveUILayoutDynamicPicklist" />
    <design:attribute name="disableCache" default="false" label="Disable Cache" description="Use this during development to prevent the Layout, Cards and Templates from being read from the offline cache."/>
    <design:attribute name="maxHeight" label="Max Height (px)" description="By default the component will grow dynamically as the Layout, Card and Templates are loaded. Use this to restrict the height and make the component scrollable when the content overflows. Must be in pixels (px)." default=""/>
    <design:attribute name="customVFPage" label="Custom Visualforce Page" description="The name of the Visualforce page that renders the Layout. Set this only if you wish to override the default Visualforce page used to render the cards." datasource="apex://vlocity_cmt.VisualForcePageDynamicPicklist" />
    <design:attribute name="backgroundColor" label="Background" description="Used to set the background of the component, by default it is set to #FFFFFF" />    
</design:component>